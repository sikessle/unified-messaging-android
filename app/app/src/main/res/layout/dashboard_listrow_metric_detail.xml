<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="40dp"
    android:paddingBottom="25dp"
    tools:context=".DashboardActivity" >

    <Button
        android:id="@+id/dashboard_activity_metric_detail_overview_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@android:color/transparent"
        android:text="@string/dashboard_activity_metric_detail_overview_button"
        android:textStyle="bold"
        android:textColor="@android:color/darker_gray" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/dashboard_activity_metric_detail_piechart"
        android:layout_below="@id/dashboard_activity_metric_detail_overview_button"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal" />

</RelativeLayout>