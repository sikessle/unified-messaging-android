<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".issueAssignment.IssueAssignmentDetailActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/issue_assignment_detail_activity_issue_count_layout"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/issue_assignment_detail_activity_issue_count"
            android:layout_width="110sp"
            android:layout_height="110sp"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@android:color/black"
            android:background="@drawable/circle"
            android:textSize="80sp"
            android:textStyle="bold" />
    </LinearLayout>
 
    <TextView
        android:id="@+id/issue_assignment_detail_activity_developer_name"
        android:text="@string/issue_assignment_detail_activity_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/issue_assignment_detail_activity_issue_count_layout"
        android:layout_marginTop="30sp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />
 
    <TextView
        android:id="@+id/issue_assignment_detail_activity_issue_selves"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/issue_assignment_detail_activity_developer_name"
        android:layout_marginTop="30sp"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:scrollbars="vertical"
        android:linksClickable="true"
        android:autoLink="web" />
 
</RelativeLayout>